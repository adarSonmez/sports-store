@model Product

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Name
            <span class="badge rounded-pill bg-primary text-white"
                  style="float:right">
                <small>@Model.Price.ToString("c")</small>
            </span>
        </h4>
    </div>

    <!-- Form for adding a product to the shopping cart. Each form is uniquely identified by the product's ID. -->
    <form id="@Model.ProductId" asp-page="/Cart" method="post">
        <!-- Hidden input to store the product ID. This is crucial for identifying the product being added to the cart. -->
        <input type="hidden" asp-for="ProductId"/>

        <!-- Hidden input to store the return URL. This allows users to return to the current page after adding to the cart. -->
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()"/>

        <span class="card-text p-1">
            @Model.Description
            <button type="submit" class="btn btn-success btn-sm pull-right" style="float:right">
                Add To Cart
            </button>
        </span>
    </form>

</div>