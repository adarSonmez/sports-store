@inherits LayoutComponentBase

<div class="bg-info text-white p-2">
    <span class="navbar-brand ml-2">SPORTS STORE Administration</span>
</div>

<div class="container-fluid">
    <div class="row p-2">
        <div class="col-3">
            <div class="d-grid gap-1">
                <!-- NavLink for navigating to the Products section. -->
                <NavLink class="btn btn-outline-primary"
                         href="/admin/products" 
                         ActiveClass="btn-primary text-white" 
                         Match="NavLinkMatch.Prefix">
                    Products
                </NavLink>
                
                <!-- NavLink for navigating to the Orders section. -->
                <NavLink class="btn btn-outline-primary"
                         href="/admin/orders" 
                         ActiveClass="btn-primary text-white" 
                         Match="NavLinkMatch.Prefix">
                    Orders
                </NavLink>            
            </div>
        </div>

        <div class="col">
            <!-- Body section where the content for the administration panel is rendered. -->
            @Body
        </div>
    </div>
</div>
